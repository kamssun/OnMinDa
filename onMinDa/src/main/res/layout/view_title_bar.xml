<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@color/transparent"
        >

    <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:src="@drawable/main_titlebar_bg_5"/>

    <RelativeLayout
            android:id="@+id/view_title_bar_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            android:background="@color/transparent">

        <LinearLayout
                android:id="@+id/titlebar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="14dp"
                android:gravity="center">

            <ImageView
                    android:id="@+id/logo_and_title"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/left_more_off"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/titlebar_left_two"
                android:layout_width="wrap_content"
                android:layout_height="43dip"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/titlebar_left"
                android:gravity="center"
                android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
                android:id="@+id/titlebar_right"
                android:layout_width="wrap_content"
                android:layout_height="43dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center">

            <ImageView
                    android:id="@+id/main_person"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_personal_info"/>
        </LinearLayout>

        <TextView
                android:id="@+id/week_of_semester"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:background="@drawable/bg_week_num"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"

                />

        <LinearLayout
                android:id="@+id/add_centerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/title_bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人在民大"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="normal"/>

                <TextView
                        android:id="@+id/city_details_dist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="13"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>