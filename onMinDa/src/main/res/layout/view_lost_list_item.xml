<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/navigation_item_bg_red"
    android:padding="16dip" >

    <LinearLayout
        android:id="@+id/lost_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lost_item_name"
            style="@style/ListTitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/lost_item_place"
            style="@style/ListSubtitleText"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/lost_item_time"
            style="@style/ListSubtitleText"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/lost_item_description"
            style="@style/ListSubtitleText"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>
    
    <ImageView
		android:layout_width="15dip"
		android:layout_height="15dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dip"
        android:src="@drawable/list_item_navigation"/>

</RelativeLayout>