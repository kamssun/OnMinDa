<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_login_bg"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/SettingItemTop"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_list_top"
        android:orientation="horizontal" >

        <TextView
            style="@style/MySettingText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="账号" />

        <EditText
            android:id="@+id/library_login_account"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@null"
            android:hint="Account"
            android:inputType="number"
            android:textColor="#727272"
            android:textColorHint="#999999"
            android:textCursorDrawable="@null"
            android:textSize="17.0sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/SettingItemMiddle"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/MySettingText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="密码" />

        <EditText
            android:id="@+id/library_login_password"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@null"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#727272"
            android:textColorHint="#999999"
            android:textCursorDrawable="@null"
            android:textSize="17.0sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/SettingItemBottom"
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/library_login_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="登 录"
            android:textColor="#707070"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/library_login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox_bg"
            android:checked="true"
            android:text="记住密码"
            android:textColor="@color/red" />

        <RadioGroup
            android:id="@+id/role_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_btn_red_selector"
                android:checked="true"
                android:text="学号"
                android:textColor="@color/red" />

            <RadioButton
                android:id="@+id/barid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:button="@drawable/radio_btn_red_selector"
                android:text="条码号"
                android:textColor="@color/red" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>